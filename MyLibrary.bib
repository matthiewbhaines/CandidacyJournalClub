	number = {12},
	journaltitle = {Current Biology},
	author = {Slack, Jay P. and Brockhoff, Anne and Batram, Claudia and Menzel, Susann and Sonnabend, Caroline and Born, Stephan and Galindo, Maria Mercedes and Kohl, Susann and Thalmann, Sophie and Ostopovici-Halip, Liliana and Simons, Christopher T. and Ungureanu, Ioana and Duineveld, Kees and Bologa, Cristian G. and Behrens, Maik and Furrer, Stefan and Oprea, Tudor I. and Meyerhof, Wolfgang},
	date = {2010},
